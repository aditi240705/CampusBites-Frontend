<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/main"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Complaint ID -->
        <TextView
            android:id="@+id/tvComplaintId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint ID: 1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Transaction ID -->
        <TextView
            android:id="@+id/tvTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction ID: 123456"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Issue Type -->
        <TextView
            android:id="@+id/tvIssueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue: Double Payment"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Issue Details -->
        <TextView
            android:id="@+id/tvIssueDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details: Need Refund"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Canteen Name -->
        <TextView
            android:id="@+id/tvCanteenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canteen: Student Cafe"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Filed"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="#FF5722" />

        <!-- Resolve Button -->
        <Button
            android:id="@+id/btnResolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolve"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
