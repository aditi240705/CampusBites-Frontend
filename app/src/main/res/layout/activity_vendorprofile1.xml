<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendorprofile1"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile and Settings"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp"/>

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Canteen Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canteen Name"
                    android:textColor="#888"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvCanteenName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campus Canteen"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginBottom="12dp"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#888"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vendor@campus.edu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginBottom="12dp"/>

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#888"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1 234 567 8900"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginBottom="12dp"/>

                <!-- College -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College"
                    android:textColor="#888"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvCollege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="University Campus"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginBottom="22dp"/>
            </LinearLayout>

            <!-- Security Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp"/>

            <!-- Old Password -->

            <!-- New Password -->

            <!-- Confirm New Password -->

            <!-- Update Password Button -->
            <Button
                android:id="@+id/btnUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Update Password"
                android:textAllCaps="false"
                android:backgroundTint="#21C06F"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginBottom="14dp"/>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:backgroundTint="#FF5D5D"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
