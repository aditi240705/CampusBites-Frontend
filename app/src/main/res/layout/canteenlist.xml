<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".CanteenListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Back Button -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/group"
            android:layout_gravity="start"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Canteen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"/>
        <!-- Radio Buttons -->
        <RadioGroup
            android:id="@+id/canteenRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_main"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/border"
                android:buttonTint="@color/black"
                android:padding="12dp"
                android:text="Main Cafeteria"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/radio_engineering"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/border"
                android:buttonTint="@color/black"
                android:padding="12dp"
                android:text="Engineering Block Cafe"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/radio_science"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="Science Block Canteen"
                android:background="@drawable/border"
                android:padding="12dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/radio_library"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="Library Cafe"
                android:background="@drawable/border"
                android:padding="12dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </RadioGroup>

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/orange"
            android:padding="12dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

</LinearLayout>