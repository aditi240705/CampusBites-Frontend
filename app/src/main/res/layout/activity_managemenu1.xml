<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".managemenu1"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/manageMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGE MENU:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/editMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/edit"
                android:text="Edit Menu Item"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6F2C" />

            <Button
                android:id="@+id/addNewMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/dollar"
                android:text="Add New Menu Item"
                android:textColor="#FFFFFF"
                android:backgroundTint="#34A97B" />

            <Button
                android:id="@+id/viewMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/all"
                android:text="View all menu items"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6F2C" />

            <Button
                android:id="@+id/addDiscountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/edit"
                android:text="Add Discount"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6F2C" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
