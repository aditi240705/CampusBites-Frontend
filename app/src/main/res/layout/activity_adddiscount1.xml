<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adddiscount1"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Product Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="#888"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veg Cheese Sandwich"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginBottom="18dp"/>

            <!-- Original Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original Price"
                android:textColor="#888"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvOriginalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="18dp"/>

            <!-- Discount Percentage -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount Percentage"
                android:textColor="#888"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="#222"/>
            </LinearLayout>

            <!-- Discounted Price and Tag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/tvDiscountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹799"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#222"/>

                <TextView
                    android:id="@+id/tvOriginalStrike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹999"
                    android:textSize="16sp"
                    android:textColor="#AAA"
                    android:layout_marginStart="8dp"
                    />

                <TextView
                    android:id="@+id/tvPercentOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% OFF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="#DFF7EA"
                    android:textColor="#21C06F"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
            </LinearLayout>

            <!-- Time Limited Discount Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Limited Discount"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/switchTimeLimited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="#FF7001"
                    android:trackTint="#FFE6D1"/>


            </LinearLayout>

            <!-- Start Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textColor="#888"
                android:textSize="13sp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Jan 15, 2024"
                    android:textSize="16sp"
                    android:textColor="#222"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_month"/>
            </LinearLayout>

            <!-- End Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textColor="#888"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">
                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Jan 30, 2024"
                    android:textSize="16sp"
                    android:textColor="#222"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_month"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="#F0F1F4"
                android:layout_marginBottom="16dp" />

            <!-- Create Discount Button -->
            <Button
                android:id="@+id/btnCreateDiscount"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Create Discount"
                android:textSize="17sp"
                android:backgroundTint="#FF7001"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
