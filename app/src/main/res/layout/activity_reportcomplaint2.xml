<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportcomplaint2">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Arrow and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/group"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report a Complaint"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Info Banner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️  We'll resolve your issue within 24–48 hours"
                android:textColor="#E65100"
                android:background="#FFF3E0"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp" />

            <!-- Transaction ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/edit_transaction_id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter transaction ID"
                android:background="@drawable/recs"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Issue Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's the issue?"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/issue_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/issue_option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount deducted but order not confirmed"
                    android:buttonTint="#FF5722" />

                <RadioButton
                    android:id="@+id/issue_option_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double payment"
                    android:buttonTint="#FF5722" />

                <RadioButton
                    android:id="@+id/issue_option_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refund not received"
                    android:buttonTint="#FF5722" />

                <RadioButton
                    android:id="@+id/issue_option_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:buttonTint="#FF5722" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canteen Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/CanteenName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter Canteen Name"
                android:background="@drawable/recs"
                android:padding="12dp"
                android:textSize="14sp" />


            <!-- Additional Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us more about the issue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/edit_additional_details"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/recs"
                android:gravity="top"
                android:hint="Please provide additional details about your issue"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/submit_complaint_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Submit Complaint"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5722"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
