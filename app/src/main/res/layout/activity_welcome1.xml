<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome1">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Order Now Button -->
            <Button
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF7F32"
                android:text="Order Now"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- View Reviews -->
            <LinearLayout
                android:id="@+id/viewreviews"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/star" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Reviews"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See what others are saying"
                        android:textColor="#888888"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- User Profile -->
            <Button
                android:id="@+id/profilebtn"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FF7F32"
                android:drawableLeft="@drawable/use"
                android:paddingStart="16dp"
                android:text="User Profile"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Accounts -->
            <Button
                android:id="@+id/MYACCOUNT"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FF7F32"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:text="Accounts\nManage your payments"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF" />

            <!-- Campus Specials Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campus Specials"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- 20% OFF Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/orangecard"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% OFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="on your first order"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/tag" />

                <Button
                    android:layout_width="279dp"
                    android:layout_height="56dp"
                    android:backgroundTint="#FFFF"
                    android:text="Order Now"
                    android:textColor="#FF6B00"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
