<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9E2"
    android:orientation="vertical"
    tools:context=".home1">

    <!-- Spacer (pushes content to vertical center) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Orange Circle with Logo -->
        <FrameLayout
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <!-- Orange Circle background -->
            <ImageView
                android:id="@+id/ivOrangeCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/applogo" />

            <!-- Logo centered -->
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint" />
        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="CampusBite"
            android:textColor="#222"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Smart. Fast. Tasty."
            android:textColor="#333333"
            android:textSize="14sp" />

        <!-- Sub-Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Your Campus Food Buddy"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Spacer (pushes button to bottom) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#FF7001"
        android:text="Get Started"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>
