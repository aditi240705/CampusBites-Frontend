<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imgMasalaDosa"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/landscape_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="Masala Dosa"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMasalaDosaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masala Dosa"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/txtMasalaDosaPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹80"
                android:textStyle="bold"
                android:textColor="#FF6B00"
                android:textSize="15sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQtyMasalaDosa"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnMinusMasalaDosa"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/minus"
                android:contentDescription="Decrease" />

            <TextView
                android:id="@+id/qtyMasalaDosa"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <ImageButton
                android:id="@+id/btnPlusMasalaDosa"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/plus"
                android:backgroundTint="#ff6b2c"
                android:contentDescription="Increase" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>