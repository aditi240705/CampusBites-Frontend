<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".emailverification2">

    <!-- Back Arrow -->

    <!-- Mail Icon -->
    <ImageView
        android:id="@+id/mailIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Mail Icon"
        android:src="@drawable/mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/verifyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/mailIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/verifySubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We've sent a verification code to"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/verifyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Address -->
    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@college.edu"
        android:textColor="#FF6B00"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/verifySubtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <!-- OTP Field -->
    <EditText
        android:id="@+id/otpField"
        android:layout_width="243dp"
        android:layout_height="82dp"
        android:background="@drawable/otp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp" />

    <!-- Verify Button -->
    <Button
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:padding="12dp"
        android:text="Verify"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#FF6B2C"
        app:layout_constraintTop_toBottomOf="@id/otpField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
